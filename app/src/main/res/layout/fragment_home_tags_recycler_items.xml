<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="40dp"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_home_tags_recycler_items_cardview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/editTextSearch"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fragment_home_tags_recycler_items_tag_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/metrophobic"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="REMINDERSSSSSSS"
            android:padding="@dimen/textViewPadding"
            android:textSize="11sp"
            android:ellipsize="end"
            android:maxLines="1"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>